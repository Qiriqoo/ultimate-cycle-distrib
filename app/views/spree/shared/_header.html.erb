<% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
<div id="spree-header">
  <header id="header" data-hook>
      <div class="row">
        <div class="col-md-5">
          <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
        </div>
        <figure id="logo" class="col-md-2 text-center" data-hook>
          <%= link_to spree.root_path do %>
            <%= image_tag "Ultimate-Cycle-Distribution-logo-small.png" %>
          <% end %>
        </figure>
        <div class="col-md-5">
          <%= render :partial => 'spree/shared/nav_bar' %>
        </div>
      </div>
  </header>
  <div id='main-search-bar' class="col-md-12">
    <div class="col-md-6 navbar-nav">
      <%= breadcrumbs(@taxon) %>      
    </div>
    <div class = "col-md-6 pull-right">
      <%= render :partial => 'spree/shared/search' %>
    </div>
  </div>
</div>
