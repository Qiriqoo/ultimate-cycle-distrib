<footer id="footer" class="sixteen columns" data-hook>
  <div id="footer-right" class="columns omega eight" data-hook>
    <h6>NEWSLETTER</h6>
    <%= form_for :newsletter, :url => newsletters_url do |f| %>
      <%= f.label :email, Spree.t(:email) %> <br>
      <%= f.text_field :email, :class => 'fullwidth' %>
      <br>
      <br>
      <%= button Spree.t('actions.subscribe'), "S'abonner" %>
    <% end %>
  </div>
  <div id="footer-right" class="columns omega eight" data-hook>
    <%= link_to Spree.t('pages.contact.contact') , new_contact_path %>
    <br>
    <% Spree::Page.order('created_at DESC').each do |page| %>
      <%= link_to Spree.t("pages.#{page.name.parameterize.underscore}"), page_path(page.slug) %>
      <br>
    <% end %>
  </div>
</footer>
