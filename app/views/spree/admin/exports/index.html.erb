<% content_for :page_title do %>
  <%= Spree.t('exports.exports') %>
<% end %>

<div class="col-md-6 col-sm-12 col-xs-12 text-center">
  <h3>Newsletters</h3>
  <br>
  <% if @exports_in_progress[:newsletters].present? %>
    <%= image_tag('loader.gif') %>
    <br>
    <%= Spree.t('exports.in_progress') %>
    <br>
    <%= Spree.t('exports.in_progress_instructions') %>
    <br>
    <%= link_to Spree.t('actions.refresh'), admin_exports_path %>
   <% else %>
    <%= form_for [:admin, @export_new] do |f| %>
      <%= f.hidden_field :source, value: :newsletters %>
      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button Spree.t('exports.new'), 'file' %>
      </div>
    <% end %>
  <% end %>
  <br>
  <br>
  <span><%= Spree.t('exports.last') %></span>
  <br>
  <% if @last_exports[:newsletters].present? %>
    <span><%= @last_exports[:newsletters].to_formatted_s(:db) %></span>
  <% end %>
</div>


<div class="col-md-6 col-sm-12 col-xs-12 text-center">
  <h3>Commandes</h3>
  <br>
  <% if @exports_in_progress[:orders].present? %>
    <%= image_tag('loader.gif') %>
    <br>
    <%= Spree.t('exports.in_progress') %>
    <br>
    <%= Spree.t('exports.in_progress_instructions') %>
    <br>
    <%= link_to Spree.t('actions.refresh'), admin_exports_path %>
   <% else %>
    <%= form_for [:admin, @export_new] do |f| %>
      <div class="date-range-filter field ">
        <%= label_tag nil, Spree.t(:start), :class => 'inline' %>
        <%= text_field_tag :start, nil, class: 'datepicker datepicker-from' %>

        <span class="range-divider">
          /
        </span>

        <%= text_field_tag :end, nil, class: 'datepicker datepicker-to' %>
        <%= label_tag nil, Spree.t(:end), :class => 'inline' %>
      </div>
      <br>
      <%= f.hidden_field :source, value: :orders %>
      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button Spree.t('exports.new'), 'file' %>
      </div>
    <% end %>
  <% end %>
  <br>
  <br>
  <span><%= Spree.t('exports.last') %></span>
  <br>
  <% if @last_exports[:orders].present? %>
    <span><%= @last_exports[:orders].to_formatted_s(:db) %></span>
  <% end %>
</div>
